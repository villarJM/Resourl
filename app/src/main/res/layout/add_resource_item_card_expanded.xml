<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardElevation="0dp"
    app:cardCornerRadius="40dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="50dp"
                android:layout_marginEnd="10dp">

                <ImageView
                    android:id="@+id/resource_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_launcher_background"/>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/resource_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Resource Name"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/resource_url"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:gravity="center_vertical"
                    android:text="https://www.example.com"
                    android:textColor="?attr/colorOnPrimaryContainer"
                    android:textAppearance="?attr/textAppearanceBodyMedium" />

                <TextView
                    android:id="@+id/resource_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="09, January 2024"
                    android:textColor="?attr/colorPrimary"
                    android:textAppearance="?attr/textAppearanceBodyMedium" />



            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/edit_resource_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                app:icon="@drawable/ic_edit"
                app:iconGravity="textStart"/>

        </LinearLayout>

        <!-- Chip de categoría -->
        <com.google.android.material.chip.Chip
            android:id="@+id/category_chip"
            style="@style/OutlinedChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textColor="?attr/colorOnPrimaryContainer"
            android:text="Category"/>

        <TextView
            android:id="@+id/resource_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Design tool for creating user interfaces and prototypes."/>

        <!-- ChipGroup para tags dinámicos -->
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/tags_chip_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:chipSpacing="8dp"
            app:chipSpacingHorizontal="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:textColor="?attr/colorTertiary"
                style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                android:text="@string/add_resource_delete_button"
                app:icon="@drawable/ic_trash_outlined"
                app:iconTint="?attr/colorTertiary"
                app:iconGravity="textStart"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:text="@string/add_resource_save_button"
                app:backgroundTint="?attr/colorSecondary"
                style="@style/ThemeOverlay.Material3.Button.ElevatedButton"
                app:icon="@drawable/ic_save_outlined"
                app:iconGravity="textStart"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>