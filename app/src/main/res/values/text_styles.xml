<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Material Design 3 Typography Styles with Funnel Display -->

    <!-- Display Large - Para títulos principales muy grandes -->
    <style name="TextAppearance.App.DisplayLarge" parent="TextAppearance.Material3.DisplayLarge">
        <item name="fontFamily">@font/funnel_display</item>
        <item name="android:fontFamily">@font/funnel_display</item>
        <item name="android:textSize">57sp</item>
        <item name="android:fontWeight">400</item>
    </style>

    <!-- Display Medium - Para títulos principales -->
    <style name="TextAppearance.App.DisplayMedium" parent="TextAppearance.Material3.DisplayMedium">
        <item name="fontFamily">@font/funnel_display</item>
        <item name="android:fontFamily">@font/funnel_display</item>
        <item name="android:textSize">45sp</item>
        <item name="android:fontWeight">400</item>
    </style>

    <!-- Display Small - Para títulos secundarios grandes -->
    <style name="TextAppearance.App.DisplaySmall" parent="TextAppearance.Material3.DisplaySmall">
        <item name="fontFamily">@font/funnel_display_bold</item>
        <item name="android:fontWeight">900</item>
    </style>

    <!-- Headline Large - Para títulos de sección principales -->
    <style name="TextAppearance.App.HeadlineLarge" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="fontFamily">@font/funnel_display</item>
        <item name="android:fontFamily">@font/funnel_display</item>
        <item name="android:textSize">32sp</item>
        <item name="android:fontWeight">400</item>
    </style>

    <!-- Headline Medium - Para títulos de sección -->
    <style name="TextAppearance.App.HeadlineMedium" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="fontFamily">@font/funnel_display</item>
        <item name="android:fontFamily">@font/funnel_display</item>
        <item name="android:textSize">28sp</item>
        <item name="android:fontWeight">400</item>
    </style>

    <!-- Headline Small - Para subtítulos -->
    <style name="TextAppearance.App.HeadlineSmall" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="fontFamily">@font/funnel_display</item>
        <item name="android:fontFamily">@font/funnel_display</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontWeight">400</item>
    </style>

    <!-- Title Large - Para títulos de tarjetas -->
    <style name="TextAppearance.App.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">@font/funnel_display</item>
    </style>

    <!-- Title Medium - Para nombres de recursos -->
    <style name="TextAppearance.App.TitleMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="fontFamily">@font/funnel_display_semibold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Title Small - Para subtítulos pequeños -->
    <style name="TextAppearance.App.TitleSmall" parent="TextAppearance.Material3.TitleSmall">
        <item name="fontFamily">@font/funnel_display</item>
        <item name="android:fontFamily">@font/funnel_display</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontWeight">500</item>
    </style>

    <!-- Body Large - Para texto principal largo -->
    <style name="TextAppearance.App.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="fontFamily">@font/outfit</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Body Medium - Para texto descriptivo -->
    <style name="TextAppearance.App.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="fontFamily">@font/outfit_regular</item>
    </style>

    <!-- Body Small - Para texto auxiliar -->
    <style name="TextAppearance.App.BodySmall" parent="TextAppearance.Material3.BodySmall">
        <item name="fontFamily">@font/funnel_display</item>
        <item name="android:fontFamily">@font/funnel_display</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontWeight">400</item>
    </style>

    <!-- Label Large - Para botones grandes -->
    <style name="TextAppearance.App.LabelLarge" parent="TextAppearance.Material3.LabelLarge">
        <item name="fontFamily">@font/funnel_display_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontWeight">500</item>
    </style>

    <!-- Label Medium - Para botones medianos -->
    <style name="TextAppearance.App.LabelMedium" parent="TextAppearance.Material3.LabelMedium">
        <item name="fontFamily">@font/funnel_display</item>
        <item name="android:fontFamily">@font/funnel_display</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontWeight">500</item>
    </style>

    <!-- Label Small - Para etiquetas pequeñas -->
    <style name="TextAppearance.App.LabelSmall" parent="TextAppearance.Material3.LabelSmall">
        <item name="fontFamily">@font/funnel_display_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Estilos personalizados específicos para la app -->

    <!-- App Bar Title - Para títulos de pantalla -->
    <style name="TextAppearance.App.AppBarTitle" parent="TextAppearance.App.DisplaySmall">
        <item name="android:fontWeight">700</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <!-- Resource Name - Para nombres de recursos en tarjetas -->
    <style name="TextAppearance.App.ResourceName" parent="TextAppearance.App.TitleMedium">
        <item name="android:fontWeight">500</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Resource URL - Para URLs en tarjetas -->
    <style name="TextAppearance.App.ResourceUrl" parent="TextAppearance.App.BodyMedium">
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
        <item name="android:fontWeight">400</item>
    </style>

    <!-- Resource Date - Para fechas en tarjetas -->
    <style name="TextAppearance.App.ResourceDate" parent="TextAppearance.App.BodySmall">
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
        <item name="android:fontWeight">400</item>
    </style>

    <!-- Resource Description - Para descripciones -->
    <style name="TextAppearance.App.ResourceDescription" parent="TextAppearance.App.BodyMedium">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:fontWeight">400</item>
    </style>

    <!-- Section Header - Para encabezados de sección -->
    <style name="TextAppearance.App.SectionHeader" parent="TextAppearance.App.LabelMedium">
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
        <item name="android:fontWeight">500</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Input Hint - Para hints de campos de texto -->
    <style name="TextAppearance.App.InputHint" parent="TextAppearance.App.BodyLarge">
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
        <item name="android:fontWeight">400</item>
    </style>

    <!-- Chip Text - Para texto en chips -->
    <style name="TextAppearance.App.ChipText" parent="TextAppearance.App.LabelMedium">
        <item name="android:textColor">?attr/colorOnPrimaryContainer</item>
        <item name="android:fontWeight">500</item>
    </style>

</resources>
